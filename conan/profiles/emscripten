[settings]
arch=wasm
build_type=Release
compiler=emcc
compiler.cppstd=23
compiler.libcxx=libc++
# Optional settings to enable multithreading (see note below)
compiler.threads=posix
compiler.version=4.0.22
os=Emscripten

[tool_requires]
emsdk/4.0.22
cmake/3.27.0

[conf]
# Optional settings to enable memory allocation
tools.build:exelinkflags=['-sALLOW_MEMORY_GROWTH=1', '-sMAXIMUM_MEMORY=4GB', '-sINITIAL_MEMORY=64MB', '-pthread']
tools.build:sharedlinkflags=['-sALLOW_MEMORY_GROWTH=1', '-sMAXIMUM_MEMORY=4GB', '-sINITIAL_MEMORY=64MB', '-pthread']
